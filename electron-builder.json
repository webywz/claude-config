{
  "appId": "com.ai.control.center",
  "productName": "AI 智控中心",
  "directories": {
    "buildResources": "build",
    "output": "release"
  },
  "extraResources": [
    {
      "from": "resources",
      "to": ".",
      "filter": [ "**/*" ]
    }
  ],
  "files": [
    "out/**/*"
  ],
  "win": {
    "icon": "build/icon.png",
    "target": [
      {
        "target": "nsis",
        "arch": [ "x64" ]
      }
    ]
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": [ "x64", "arm64" ]
      }
    ],
    "category": "public.app-category.developer-tools"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
